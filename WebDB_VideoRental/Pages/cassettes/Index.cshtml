                @Html.DisplayNameFor(model => model.cassette[0].producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cassette[0].country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cassette[0].MainActor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cassette[0].DateNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cassette[0].Genre)
